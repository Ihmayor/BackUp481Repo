<Window x:Class="SushiSushi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SushiSushi"
        x:Name="mainWindow"
        Title="MainWindow" Height="750" Width="1225" ResizeMode="NoResize" WindowState="Maximized" WindowStyle="None">
    <Grid Background="BurlyWood">
        <Grid.Resources>
            <Style x:Key="RoundButtonTemplate" TargetType="Button">
                <Setter Property="Background" Value="White"/>
                <Setter Property="Foreground" Value="Black" />
                <Setter Property="Width" Value="120" />
                <Setter Property="Height" Value="80" />
                <Setter Property="Margin" Value="10"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="15" Background="{TemplateBinding Background}"
                                BorderThickness="1">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center">
                                </ContentPresenter>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Content="   V = Vegetarian&#x09;  G = Gluten-Free" Background="White" FontSize="20" HorizontalAlignment="Left" Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="0"  Height="60" Margin="10,10,0,0" VerticalAlignment="Top" Width="400"/>
        <StackPanel Grid.Row="1" Grid.Column="8" Orientation="Vertical" Margin="90,5">
            <Button Content="Call For Assistance"  Margin="0,10" FontSize="14" Height="30" Width="150" HorizontalAlignment="Left" Style="{StaticResource RoundButtonTemplate}" />
            <Button Content="Finish Meal"          Margin="0,5" FontSize="14" Height="30" Width="150" HorizontalAlignment="Left" Style="{StaticResource RoundButtonTemplate}"/>
        </StackPanel>

        <!-- Start of buttons across the top-->
        <Button Style="{StaticResource RoundButtonTemplate}" Grid.Row="1" Grid.Column="1">
            <StackPanel Orientation="Vertical" Height="80" Width="100">
                <Label HorizontalAlignment="Center" Content="Specials" FontSize="15" Height="30" />
                <Image Source="pack://application:,,,/Resources/special.png" Margin="2" Width="50"/>
            </StackPanel>
        </Button>
        <Button Style="{StaticResource RoundButtonTemplate}" Grid.Row="1" Grid.Column="2">
            <StackPanel Orientation="Vertical" Height="80" Width="100">
                <Label HorizontalAlignment="Center" Content="Appetizers" FontSize="15" Height="30" />
                <Image Source="pack://application:,,,/Resources/Appetizer1.png" Margin="2" Width="50"/>
            </StackPanel>
        </Button>
        <Button Style="{StaticResource RoundButtonTemplate}" Grid.Row="1" Grid.Column="3" >
            <StackPanel Orientation="Vertical" Height="80" Width="100">
                <Label HorizontalAlignment="Center" Content="Sushi" FontSize="15" Height="30" />
                <Image Source="pack://application:,,,/Resources/sushi.png" Margin="2" Width="50"/>
            </StackPanel>
        </Button>
        <Button Style="{StaticResource RoundButtonTemplate}"   Grid.Row="1" Grid.Column="4" >
            <StackPanel Orientation="Vertical" Height="80" Width="100">
                <Label HorizontalAlignment="Center" Content="Fried" FontSize="15" Height="30" />
                <Image Source="pack://application:,,,/Resources/Fried.png" Margin="2" Width="50"/>
            </StackPanel>
        </Button>
        <Button Style="{StaticResource RoundButtonTemplate}"  Grid.Row="1" Grid.Column="5" >
            <StackPanel Orientation="Vertical" Height="80" Width="100">
                <Label HorizontalAlignment="Center" Content="Drinks" FontSize="15" Height="30" />
                <Image Source="pack://application:,,,/Resources/Drink.png" Margin="2" Width="50"/>
            </StackPanel>
        </Button>
        
        <Button  Style="{StaticResource RoundButtonTemplate}"  Grid.Row="1" Grid.Column="6" >
            <StackPanel Orientation="Vertical" Height="80" Width="100">
                <Label HorizontalAlignment="Center" Content="Desserts" FontSize="15" Height="30" />
                <Image Source="pack://application:,,,/Resources/Danjo.png" Margin="2" Width="50"/>
            </StackPanel>
        </Button>

        <ListBox x:Name="MainListView" 
                 Margin="0" 
                 Grid.Row="2"  
                 Grid.Column="1" Grid.ColumnSpan="6"
                 ScrollViewer.CanContentScroll="False" ScrollViewer.HorizontalScrollBarVisibility="Disabled"  
                 Height="500" Width="820">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Height="Auto" Width="820">
                        <Label Content="{Binding CategoryName}" Foreground="White" Background="Green" FontSize="25" Height="40" Width="{Binding ElementName=MainListView, Path=Width}"/>
                        <local:MenuCategoryControl DataContext="{Binding AssociatedMenuItems}" Background="Blue" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <ScrollViewer HorizontalAlignment="Left" Height="500" Grid.Column="8" Grid.Row="2" HorizontalScrollBarVisibility="Disabled">
            <StackPanel x:Name="SideBarStackPanel"
                    Height="Auto" Width="310"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Stretch" 
                    Orientation="Vertical" 
                    Background="BlanchedAlmond"
                    >
                <Label Content="Selected" Foreground="White" Background="Gray" FontSize="12" Height="30" Width="{Binding ElementName=SideBarStackPanel, Path=Width}"/>
                <ItemsControl Grid.Row="2" Grid.Column="8" Height="Auto" x:Name="SelectedItemsList" ScrollViewer.CanContentScroll="True" ItemsSource="{Binding ElementName=mainWindow, Path=SelectedItems}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Black" BorderThickness="2" HorizontalAlignment="Left" Height="120" Margin="50,5" VerticalAlignment="Top" Width="180">
                                <Grid Margin="0,0,0,0" Background="#FFF5D3B0">
                                    <Grid>
                                        <Image HorizontalAlignment="Left" Height="27" Margin="10,10,0,0" VerticalAlignment="Top" Width="28" Source="{Binding Image}"/>
                                        <Label Content="{Binding Name}" HorizontalAlignment="Left" Margin="55,10,0,0" VerticalAlignment="Top" Width="114" FontWeight="Bold"/>
                                        <Label Content="Price:" HorizontalAlignment="Left" Margin="55,36,0,0" VerticalAlignment="Top" Height="22" Width="31" FontSize="9" FontWeight="Bold"/>
                                        <Label Content="{Binding SelectedOption}" HorizontalAlignment="Left" Margin="10,62,0,0" VerticalAlignment="Top" Width="159" FontSize="10" FontWeight="Bold"/>
                                        <TextBox HorizontalAlignment="Left" Height="20" Margin="81,88,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="18" FontSize="10" FontWeight="Bold" />
                                        <Button Content="+" HorizontalAlignment="Left" Margin="16,88,0,0" VerticalAlignment="Top" Width="32" Height="20" Background="#FF3ABB1D" FontWeight="Bold"/>
                                        <Button Content="-" HorizontalAlignment="Left" Margin="130,88,0,0" VerticalAlignment="Top" Width="32"  Height="20" Background="#FFDE4141" FontWeight="Bold"/>
                                        <TextBox HorizontalAlignment="Left" Height="18" Margin="86,39,0,0" TextWrapping="Wrap" Text="$4.99" VerticalAlignment="Top" Width="36" />
                                    </Grid>
                                </Grid>
                            </Border>
                            <!--<local:SidebarItemControl/>-->
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <Label Content="Ordered" Foreground="White" Margin="0,5,0,0" Background="Gray" FontSize="12" Height="30" Width="{Binding ElementName=SideBarStackPanel, Path=Width}"/>
                <ItemsControl x:Name="OrderedItemsList" ItemsSource="{Binding ElementName=mainWindow, Path=OrderedItems}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Black" BorderThickness="2" HorizontalAlignment="Left" Height="120" Margin="50,5" VerticalAlignment="Top" Width="180">
                                <Grid Margin="0,0,0,0" Background="LightGreen">
                                    <Grid>
                                        <Image HorizontalAlignment="Left" Height="27" Margin="10,10,0,0" VerticalAlignment="Top" Width="28" Source="{Binding Image}"/>
                                        <Label Content="{Binding Name}" HorizontalAlignment="Left" Margin="55,10,0,0" VerticalAlignment="Top" Width="114" FontWeight="Bold"/>
                                        <Label Content="Price:" HorizontalAlignment="Left" Margin="55,36,0,0" VerticalAlignment="Top" Height="22" Width="31" FontSize="9" FontWeight="Bold"/>
                                        <Label Content="{Binding SelectedOption}" HorizontalAlignment="Left" Margin="10,62,0,0" VerticalAlignment="Top" Width="159" FontSize="10" FontWeight="Bold"/>
                                        <TextBox HorizontalAlignment="Left" Height="20" Margin="81,88,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="18" FontSize="10" FontWeight="Bold" />
                                        <Button Content="+" HorizontalAlignment="Left" Margin="16,88,0,0" VerticalAlignment="Top" Width="32" Height="20" Background="#FF3ABB1D" FontWeight="Bold"/>
                                        <Button Content="-" HorizontalAlignment="Left" Margin="130,88,0,0" VerticalAlignment="Top" Width="32"  Height="20" Background="#FFDE4141" FontWeight="Bold"/>
                                        <TextBox HorizontalAlignment="Left" Height="18" Margin="86,39,0,0" TextWrapping="Wrap" Text="$4.99" VerticalAlignment="Top" Width="36" />
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <Label Content="Delivered" Foreground="White"  Background="Gray" Margin="0,5" FontSize="12" Height="30" Width="{Binding ElementName=SideBarStackPanel, Path=Width}"/>
                <ItemsControl  x:Name="DeliveredItemsList" ItemsSource="{Binding ElementName=mainWindow, Path=DeliveredItems}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Black" BorderThickness="2" HorizontalAlignment="Left" Height="120" Margin="50,5" VerticalAlignment="Top" Width="180">
                                <Grid Margin="0,0,0,0" Background="Gray">
                                    <Grid>
                                        <Image HorizontalAlignment="Left" Height="27" Margin="10,10,0,0" VerticalAlignment="Top" Width="28" Source="{Binding Image}"/>
                                        <Label Content="{Binding Name}" HorizontalAlignment="Left" Margin="55,10,0,0" VerticalAlignment="Top" Width="114" FontWeight="Bold"/>
                                        <Label Content="Price:" HorizontalAlignment="Left" Margin="55,36,0,0" VerticalAlignment="Top" Height="22" Width="31" FontSize="9" FontWeight="Bold"/>
                                        <Label Content="{Binding SelectedOption}" HorizontalAlignment="Left" Margin="10,62,0,0" VerticalAlignment="Top" Width="159" FontSize="10" FontWeight="Bold"/>
                                        <TextBox HorizontalAlignment="Left" Height="20" Margin="81,88,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="18" FontSize="10" FontWeight="Bold" />
                                        <Button Content="+" HorizontalAlignment="Left" Margin="16,88,0,0" VerticalAlignment="Top" Width="32" Height="20" Background="#FF3ABB1D" FontWeight="Bold"/>
                                        <Button Content="-" HorizontalAlignment="Left" Margin="130,88,0,0" VerticalAlignment="Top" Width="32"  Height="20" Background="#FFDE4141" FontWeight="Bold"/>
                                        <TextBox HorizontalAlignment="Left" Height="18" Margin="86,39,0,0" TextWrapping="Wrap" Text="$4.99" VerticalAlignment="Top" Width="36" />
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                
            </StackPanel>
        </ScrollViewer>
        <StackPanel Grid.Row="3" Grid.Column="8" Orientation="Vertical"  HorizontalAlignment="Stretch">
            <Label Content="Total Price: 0.00" FontSize="14" Margin="100,5" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="8" Background="White" />
            <Button Content="Confirm Order"    FontSize="14" Margin="95,0" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Left"   Grid.Row="2" Grid.Column="8" Background="White" Style="{StaticResource RoundButtonTemplate}"/>
        </StackPanel>
    </Grid>
</Window>
